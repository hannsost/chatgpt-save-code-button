{
  "manifest_version": 3,
  "name": "ChatGPT Save Code Button",
  "version": "1.2.0",
  "description": "Adds a 'Save' button next to 'Copy' in ChatGPT code toolbars.",
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://*.openai.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
